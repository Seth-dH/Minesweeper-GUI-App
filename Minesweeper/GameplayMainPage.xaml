<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Minesweeper.GameplayMainPage"
             Title="GameplayMainPage"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False"
             >
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Button x:Name="MenuButton" x:FieldModifier="Public" Text="Menu"/>
            <Label Text="Hello There" FontSize="Header" HorizontalOptions="Center"/>
        </HorizontalStackLayout>
        <Button x:Name="CounterButton" Text="Click Me!" Clicked="CounterButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>